<% layout("/layouts/boilerplate") %>
<h3>All Listings</h3>
<!-- <form action="/listings/new" method="GET">
    <button>Create New Lisitng</button>
  </form> -->

<form action="/listings" method="GET" class="mb-4">
  <div class="input-group">
    <input
      type="text"
      name="query"
      value="<%= typeof query !== 'undefined' ? query : '' %>"
      class="form-control"
      placeholder="Search..."
    />
    <select name="filter" class="form-select">
      <option value="title" <%= filter === 'title' ? 'selected' : '' %>>Title</option>
      <option value="location" <%= filter === 'location' ? 'selected' : '' %>>Location</option>
      <option value="price" <%= filter === 'price' ? 'selected' : '' %>>Price (â‰¤)</option>
    </select>
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>

<% if (allListings.length === 0) { %>
  <div class="alert alert-warning">No listings found for your search.</div>
<% } %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing.id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="listig_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %> </b> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN")%>/ night
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
